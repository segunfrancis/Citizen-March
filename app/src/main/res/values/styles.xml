<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar.FullWidth</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text Styles -->
    <style name="PrimaryDetailText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_input_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SecondaryDetailText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_input_text_size</item>
        <item name="android:layout_marginBottom">@dimen/text_input_horizontal_margin</item>
        <item name="android:lineSpacingMultiplier">@dimen/detail_body_line_spacing_multiplier</item>
    </style>

    <!-- Widget Text Styles -->
    <style name="PrimaryWidgetText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/widget_primary_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SecondaryWidgetText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/widget_secondary_text_size</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_marginStart">@dimen/text_input_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_input_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/text_input_vertical_margin</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">@dimen/text_input_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/text_input_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_input_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_input_vertical_margin</item>
        <item name="android:padding">@dimen/text_input_horizontal_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
</resources>
